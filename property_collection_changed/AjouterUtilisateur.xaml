<Window x:Class="property_collection_changed.AjouterUtilisateur"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:property_collection_changed"
        mc:Ignorable="d"
        Title="AjouterUtilisateur" Height="100" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0,25,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nom : " Width="75"></TextBlock>
                <TextBox Width="135" Text="{Binding Nom}"></TextBox>
                <TextBlock Text="Prenom : " Width="75"></TextBlock>
                <TextBox Width="135" Text="{Binding Prenom}"></TextBox>
                <Button Content="Ajouter" Padding="15,0,15,0" Click="AddUser"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
